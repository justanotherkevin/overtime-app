<% if current_user %>
  <ul class="nav nav-tabs custom-nav mb-1">
    <li class="nav-item">
      <%= link_to "Home", root_path, class:"nav-link #{is_current_path?(root_path)}" %>
    </li>
    <li class="nav-item">
      <%= link_to "Post", posts_path, class:"nav-link #{is_current_path?(posts_path)}" %>
    </li>
    <li class="nav-item">
      <%= link_to "New Post", new_post_path, class:"nav-link #{is_current_path?(new_post_path)}", id: "new_post_from_nav"%>
    </li>
    <li class="nav-item dropdown ml-md-auto">
      <span class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown">Options</span>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
        <% if current_user.type == "AdminUser" %>
          <%= link_to "Admin Dashboard", admin_root_path, class:"dropdown-item" %>
        <% end %>
        <%= link_to "Logout", destroy_user_session_path, class:"dropdown-item", method: :delete %>
      </div>
    </li>
  </ul>
