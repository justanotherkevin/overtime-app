<div class="post-index">
  <h1>Posts index</h1>

    <table class="table table-hover table-sm table-striped">
      <thead>
        <tr>
          <th>
            #
          </th>
          <th>
            Date
          </th>
          <th>
            User
          </th>
          <th>
            Rationale
          </th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= post.id %>
            </td>
            <td>
              <%= post.created_at.strftime("%b/%d/%Y") %>
            </td>
            <td>
              <%= post.user.first_name %>
            </td>
            <td>
              <%= truncate(post.rationale,  length: 15) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>