<%= form_for(@post, class: "form") do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notification", stick: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div> 
  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div> 

  <%= f.submit "Submit", class:"btn btn-primary", type:"submit" %>

<% end %>

